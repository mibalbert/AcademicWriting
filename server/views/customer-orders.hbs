<script src='../js/all.js' type='text/javascript' defer></script>

<title>Academic Writing - Account</title>


{{> user-header}}

<section class='container'>
  <div class='h4 py-2 mt-3'>Customer orders</div>

</section>
<div class='container'>
  <div class='mb-5 pb-5 mt-2 min-h-60'>

    <div class='list-group'>
      {{#if data}}
        {{#each data}}
          <a
            href='#'
            class='list-group-item list-group-item-action'
            aria-current='true'
          >
            <div class='d-flex w-100 justify-content-between'>
              <h5 class='mb-1 truncate'>{{inc @index}}.{{this.title}}</h5>
              <small>{{days this.date_time_created}}</small>
            </div>
            <div class='d-flex justify-content-between'>
              <div>
                <p class='mb-1'>{{this.type_service}}</p>
                <small>And some small print.</small>
              </div>
              <div>{{this.status}}</div>
            </div>
          </a>
        {{/each}}
      {{else}}
        <div class='w-100'>
          <a class='new-ord-cell d-flex' href='/pricing'>
            <svg
              xmlns='http://www.w3.org/2000/svg'
              width='30'
              height='30'
              fill='currentColor'
              class='bi bi-plus-circle-fill'
              viewBox='0 0 16 16'
            >
              <path
                d='M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z'
              ></path>
            </svg>
            {{! <div class="new-order-cont">New Order</div> }}
            <div class='orange'>Create a new Order</div>
          </a>
        </div>
      {{/if}}
    </div>

  </div>
</div>